{
  "manifest_version": 2,
  "name": "YouTube Playlist",
  "description": "This extension transforms a youtube page that contains a video with multiple songs into a playlist",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "https://www.youtube.com/*",
    "http://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "css": [
        "injected.css"
      ],
      "js": [
        "jquery.min.js",
        "injected.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "injected.html"
  ]
}